<?xml version="1.0" encoding="utf-8"?>
<s:WindowedApplication xmlns:fx="http://ns.adobe.com/mxml/2009" 
					   xmlns:s="library://ns.adobe.com/flex/spark" 
					   xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:gateway="com.poc.gateway.*" xmlns:view="com.poc.gateway.view.*"
					   width="800" height="500">
	<fx:Declarations>
		<gateway:GatewayContext contextView="{this}"/>
	
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			//styleManager.loadStyleDeclarations("assets/style/fonts.swf");			
		]]>
	</fx:Script>
		<fx:Style source="assets/style/fonts.css"/>
		<s:Rect width="100%" height="100%">
			<s:fill>
				<s:RadialGradient rotation="90" x="100" y="0">
					<s:GradientEntry color="0x3a3a45"/>
					<s:GradientEntry color="0x3a3a45"/>
				</s:RadialGradient>
			</s:fill>
		</s:Rect>
		<s:Rect width="150" height="100%"><s:fill><s:SolidColor color="0x3a3a45"/></s:fill></s:Rect>
	<s:VGroup width="100%" height="100%" >
		
		
		<s:HGroup width="100%" height="80%">
			
			<!-- Left Column -->
			<s:VGroup paddingTop="20" width="150" height="75%">		
				
				<view:LastSwipeInspectorPanel height="60" />	
				<s:Scroller height="100%" width="100%" skinClass="com.poc.gateway.view.skins.scroller.scollerSkin">				
					<view:EntryLog width="100%"   />
				</s:Scroller>
			</s:VGroup>

				

			
			<!-- Middle Column -->
			<s:Group width="100%" height="100%">
				
				<view:PanelSwipeEntry width="100%" height="100%"/>
				<view:HolderInspectionArea width="100%" height="100%" y="80" />

			</s:Group>	
		</s:HGroup>
		
		
		<s:HGroup width="100%" height="60" bottom="0">
			
		</s:HGroup>
		
		
	</s:VGroup>
	<view:PanelEventManagment width="100%" height="60" bottom="0"/>

</s:WindowedApplication>
