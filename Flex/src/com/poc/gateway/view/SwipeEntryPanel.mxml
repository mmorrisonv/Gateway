<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" creationComplete="group1_creationCompleteHandler(event)">
	<fx:Script>
		<![CDATA[
			import com.poc.gateway.events.CustomEvent;
			
			import mx.events.FlexEvent;
			
			import spark.events.TextOperationEvent;
			public var messages:Object;
			
			static public var NEW_CARD_SWIPE:String = "NEW_CARD_SWIPE";
		
			
			protected function go_clickHandler(event:Event):void
			{
				var e:CustomEvent = new CustomEvent(NEW_CARD_SWIPE,cardInput.text,false);
				dispatchEvent( e );
				
			}
			
			protected function group1_creationCompleteHandler(event:FlexEvent):void
			{
				this.cardInput.setFocus();
				
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:VGroup paddingBottom="20" paddingTop="20" paddingLeft="20" paddingRight="20"
			  height="100%" width="400">
			<s:HGroup width="100%">
				<s:TextInput id="cardInput" width="100%" enter="go_clickHandler(event)" height="40" 
							 fontSize="16" fontWeight="bold"/>
				<s:Button id="go" label="OK"
						  click="go_clickHandler(event)"
						  
						  />
				
			</s:HGroup>
		
			<s:HGroup width="100%">
				<s:Label id="secondsDisp" width="100%" />
				<s:Label id="minuteDisp" width="100%" />
				<s:Label id="hourDisp" width="100%" />
			</s:HGroup>
	</s:VGroup>

</s:Group>
