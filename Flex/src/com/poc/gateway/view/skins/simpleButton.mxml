<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 creationComplete="group1_creationCompleteHandler(event)">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			private var _label:String;
	
			protected function group1_creationCompleteHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				updateLabel();
			}

			public function get label():String
			{
				return _label;
			}

			public function set label(value:String):void
			{
				_label = value;
				
			}
			public function updateLabel():void
			{
				this.text.text = _label;

			}

	

			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:Group useHandCursor="true" buttonMode="true" width="100%" height="100%">
		<s:Rect width="100%" height="100%">
			<s:fill>
				<s:LinearGradient rotation="90">
					<s:GradientEntry color="0xf5f5f5"/>
					<s:GradientEntry color="0xf5f5f5" ratio=".25"/>
					<s:GradientEntry color="0xeeeeee"/>
				</s:LinearGradient>
			</s:fill>
			<s:stroke>
				<s:SolidColorStroke color="0xcacaca"/>
			</s:stroke>
		</s:Rect>
		<s:Label id="text" styleName="Gray" fontSize="18" horizontalCenter="-2" verticalCenter="0"/>
	</s:Group>
</s:Group>
